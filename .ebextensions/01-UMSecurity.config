packages:
  yum:
    git: []

container_commands:
  01_migrate:
    command: "django-admin.py migrate"
    leader_only: true
  02_make_executable:
    command: "chmod +x scripts/createadmin.py"
    leader_only: true
  03_createadmin:
    command: "python scripts/createadmin.py"
    leader_only: true
    
option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "UMSecurity.settings"
    PYTHONPATH: "/opt/python/current/app/UMSecurity:$PYTHONPATH"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: "UMSecurity/UMSecurity/wsgi.py"